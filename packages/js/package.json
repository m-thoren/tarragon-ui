{
	"name": "@tarragon-ui/js",
	"type": "module",
	"version": "0.2.0",
	"description": "Lightweight and simple Web Components for Tarragon UI.",
	"main": "dist/tarragon.js",
	"module": "dist/tarragon.js",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "vite build",
		"clean": "rm -rf dist",
		"prebuild": "pnpm clean",
		"lint": "eslint . --max-warnings 0 --config ../../eslint.config.mts",
		"lint:fix": "prettier . --write && eslint . --fix --config ../../eslint.config.mts",
		"type-check": "tsc --noEmit --composite false --project tsconfig.json"
	},
	"dependencies": {
		"invokers-polyfill": "^0.5.7"
	},
	"devDependencies": {
		"typescript": "^5.9.3",
		"vite": "^7.1.9"
	},
	"exports": {
		".": {
			"development": "./src/tarragon.ts",
			"import": "./dist/tarragon.js",
			"require": "./dist/tarragon.js",
			"default": "./dist/tarragon.js"
		},
		"./package.json": "./package.json"
	},
	"keywords": [
		"tarragon",
		"ui",
		"js",
		"design-system"
	],
	"publishConfig": {
		"access": "public"
	}
}
