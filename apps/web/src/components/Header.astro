---
import { type Page, buildUrl, siteTitle } from '@/scripts/constants'
import BrandIcon from '../assets/brand-icon.svg'
import DialogNavigation from './DialogNavigation.astro'
import { SearchIcon } from '@lucide/astro'
import ThemeToggle from './ThemeToggle.astro'

type Props = {
	currentPage: Page | undefined
}

const { currentPage } = Astro.props
---

<header>
	<a href={buildUrl('/')} class='btn ghost' aria-label='Home'>
		<BrandIcon aria-hidden />
		<span class='visually-hidden-below-tablet'>{siteTitle}</span>
	</a>
	<div class='cluster'>
		<a href={buildUrl('/search-filter')} class='btn ghost size-icon-below-tablet'>
			<SearchIcon aria-hidden />
			<span class='visually-hidden-below-tablet'>Search</span>
		</a>
		<ThemeToggle />
		<DialogNavigation currentPage={currentPage} />
	</div>
</header>
