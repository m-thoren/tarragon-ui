---
import ComponentLayout from '@/layouts/ComponentLayout.astro'
---

<ComponentLayout name='Badge'>
	<div class='prose'>
		<h2>Default</h2>
		<div class='cluster' data-testid='badge-variants-default'>
			<span class='badge'>Default</span>
			<span class='badge accent'>Accent</span>
			<span class='badge info'>Info</span>
			<span class='badge success'>Success</span>
			<span class='badge warning'>Warning</span>
			<span class='badge danger'>Danger</span>
		</div>

		<h2>Outline</h2>
		<div class='cluster' data-testid='badge-variants-outline'>
			<span class='badge outline'>Default</span>
			<span class='badge outline accent'>Accent</span>
			<span class='badge outline info'>Info</span>
			<span class='badge outline success'>Success</span>
			<span class='badge outline warning'>Warning</span>
			<span class='badge outline danger'>Danger</span>
		</div>

		<h2>Pills</h2>
		<div class='cluster' data-testid='badge-variants-pill'>
			<span class='badge'>1</span>
			<span class='badge accent'>14</span>
			<span class='badge danger'>99+</span>
			<span class='badge info outline'>2</span>
		</div>
	</div>
</ComponentLayout>
