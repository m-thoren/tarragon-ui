---
import { ArrowRight } from '@lucide/astro'
import ComponentLayout from '@/layouts/ComponentLayout.astro'
---

<ComponentLayout name='Dropdown'>
	<tui-dropdown>
		<details class='dropdown' data-testid='dropdown-default'>
			<summary class='btn outline' data-testid='dropdown-trigger'>Open</summary>
			<ul data-testid='dropdown-list'>
				<li>
					<a href='#test' class='dropdown-action' data-testid='dropdown-action'>
						Item 1 <ArrowRight />
					</a>
				</li>
				<li>
					<a href='#test' class='dropdown-action' data-testid='dropdown-action'>
						Item 2 <ArrowRight />
					</a>
				</li>
				<li>
					<button class='dropdown-action' data-testid='dropdown-action'>Item 3</button>
				</li>
			</ul>
		</details>
	</tui-dropdown>
</ComponentLayout>
