---
import ComponentLayout from '@/layouts/ComponentLayout.astro'
---

<ComponentLayout name='Typography'>
	<div class='stack'>
		<h1>Heading 1</h1>
		<h2>Heading 2</h2>
		<h3>Heading 3</h3>
		<h4>Heading 4</h4>
		<h5>Heading 5</h5>
		<h6>Heading 6</h6>
		<p>Paragraph</p>
		<blockquote>blockquote</blockquote>
		<code>@radix-ui/react-alert-dialog</code>
		<p class='text-lead'>Lead</p>
		<p class='font-bold'>Bold</p>
		<p class='font-italic'>Italic</p>
		<p class='text-lg'>Large</p>
		<p class='text-sm'>Small</p>
		<p class='text-muted'>Muted</p>
	</div>

	<ol>
		<li>1st</li>
		<li>2nd</li>
		<li>3rd</li>
	</ol>

	<ul>
		<li>1st</li>
		<li>2nd</li>
		<li>3rd</li>
	</ul>

	<ul class='list-none'>
		<li>1st</li>
		<li>2nd</li>
		<li>3rd</li>
	</ul>

	<div>
		<table>
			<thead>
				<tr>
					<th>King's Treasury</th>
					<th>People's happiness</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>Empty</td>
					<td>Overflowing</td>
				</tr>
				<tr>
					<td>Modest</td>
					<td>Satisfied</td>
				</tr>
				<tr>
					<td>Full</td>
					<td>Ecstatic</td>
				</tr>
			</tbody>
		</table>
	</div>
</ComponentLayout>
