---
import { FilePlusIcon, FolderIcon } from '@lucide/astro'
import ComponentLayout from '@/layouts/ComponentLayout.astro'
---

<ComponentLayout name='Breadcrumbs'>
	<nav aria-label='Breadcrumb' class='breadcrumb'>
		<ul>
			<li>
				<a class='btn link' href='#test'>Home</a>
			</li>
			<li>
				<a class='btn link' href='#test'>Documents</a>
			</li>
			<li aria-current='page'>Add Document</li>
		</ul>
	</nav>
	<nav aria-label='Breadcrumbs with icons' class='breadcrumb'>
		<ul>
			<li>
				<a class='btn link' href='#test'>
					<FolderIcon aria-hidden />
					Home
				</a>
			</li>
			<li>
				<a class='btn link' href='#test'>
					<FolderIcon aria-hidden />
					Documents
				</a>
			</li>
			<li aria-current='page'>
				<span>
					<FilePlusIcon aria-hidden />
					Add Document
				</span>
			</li>
		</ul>
	</nav>
</ComponentLayout>
