---
import { CircleAlertIcon } from '@lucide/astro'
import ComponentLayout from '@/layouts/ComponentLayout.astro'
---

<ComponentLayout name='Forms'>
	<tui-ajax-form data-tui-query-key='/api/messages'>
		<tui-validate-form>
			<template data-tui-validation-message-template>
				<p class='form-message'>
					<CircleAlertIcon aria-hidden />
					<span data-tui-slot='form-message'></span>
				</p>
			</template>
			<form method='POST' action='/login'>
				<fieldset>
					<legend>User information</legend>
					<div class='form-group'>
						<label for='input-username'>
							Username
							<span class='font-medium'>(required)</span>
						</label>
						<input type='text' name='username' id='input-username' required />
					</div>
					<div class='form-group'>
						<label for='input-password'>
							Password
							<span class='font-medium'>(required)</span>
						</label>
						<input
							type='password'
							name='password'
							id='input-password'
							required
							minlength='8'
						/>
					</div>
					<div class='form-group'>
						<label for='input-tel'>Phone number</label>
						<input
							type='tel'
							name='telephone'
							id='input-tel'
							minlength='8'
							pattern='^[\+]?[0-9]+$'
						/>
					</div>
				</fieldset>

				<fieldset>
					<legend>Preferences</legend>
					<div class='form-group'>
						<label for='select-fruit'>Fruit</label>
						<select id='select-fruit' name='select-fruit'>
							<option value='' disabled selected>Choose a fruit</option>
							<option value='apple'>Apple</option>
							<option value='orange'>Orange</option>
							<option value='banana'>Banana</option>
						</select>
					</div>
					<fieldset class='choice-group' data-tui-validate-group>
						<legend>Berries</legend>
						<label for='checkbox-1'>
							<input id='checkbox-1' type='checkbox' aria-invalid='true' />
							Strawberry
						</label>
						<label for='checkbox-2'>
							<input id='checkbox-2' type='checkbox' />
							Blueberry
						</label>
						<label for='checkbox-3'>
							<input id='checkbox-3' type='checkbox' />
							Raspberry
						</label>
					</fieldset>
					<fieldset class='choice-group' data-tui-validate-group>
						<legend>Living condition</legend>
						<label for='radio-1'>
							<input type='radio' id='radio-1' name='example-radio' checked />
							Great
						</label>
						<label for='radio-2'>
							<input type='radio' id='radio-2' name='example-radio' />
							Good
						</label>
						<label for='radio-3'>
							<input type='radio' id='radio-3' name='example-radio' />
							Bad
						</label>
					</fieldset>

					<label for='switch-1'>
						<input
							id='switch-1'
							role='switch'
							type='checkbox'
							value='yes'
							name='label-text'
						/>
						Newsletter
					</label>
				</fieldset>
				<div class='action-footer'>
					<button class='outline' type='button'>Cancel</button>
					<button type='submit'>Submit</button>
				</div>
			</form>
		</tui-validate-form>
	</tui-ajax-form>
</ComponentLayout>
